@model IEnumerable<WebsiteDuLich.Models.TinTuc>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/ad_Layout.cshtml";
}

<p style="color:blue;text-align:left;font-size:32px">
    @Html.ActionLink("Thêm Mới", "Create")
    @Html.Raw(@Html.ActionLink("[replacetext]", "Create").ToHtmlString().Replace("[replacetext]", " <img src=\"/images/images/icons8-create-document-96.png\" height=\"45\">"))
</p>
<table class="table" style="border: 1px solid #A9A9A9; border-radius: 4px; text-align: center">
    <tr>
        <th style="border: 1px solid #A9A9A9;text-align:center">
            Tiêu đề
        </th>
        <th style="border: 1px solid #A9A9A9;text-align:center">
            Ảnh tiêu đề
        </th>
        <th style="border: 1px solid #A9A9A9;text-align:center">
            Mô Tả
        </th>
        <th style="border: 1px solid #A9A9A9;text-align:center">
            Người đăng
        </th>
        <th style="border: 1px solid #A9A9A9;text-align:center">
            Thời gian đăng
        </th>
        <th style="border: 1px solid #A9A9A9;text-align:center"> Acion</th>
    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td style="border: 1px solid #A9A9A9; text-align: center">
        @Html.DisplayFor(modelItem => item.TieuDe)
    </td>
    <td style="border: 1px solid #A9A9A9; text-align: center">
        <img src="@item.AnhTieuDe" style="height:45px" />
    </td>
    <td style="border: 1px solid #A9A9A9; text-align: left ; width :270px" >
        @Html.DisplayFor(modelItem => item.MoTa)
    </td>
    <td style="border: 1px solid #A9A9A9; text-align: center">
        @Html.DisplayFor(modelItem => item.NguoiDang)
    </td>
    <td style="border: 1px solid #A9A9A9; text-align: center">
        @item.TgDang.ToString("dd/MM/yyyy")
    </td>
    <td style="border: 1px solid #A9A9A9; text-align: center">
        @Html.Raw(@Html.ActionLink("[replacetext]", "Edit", new { id = item.Id }).ToHtmlString().Replace("[replacetext]", " <img src=\"/images/images/icons8-edit-property-48.png\" height=\"25\">"))
        @Html.Raw(@Html.ActionLink("[replacetext]", "Details", new { id = item.Id }).ToHtmlString().Replace("[replacetext]", " <img src=\"/images/images/icons8-view-details-48.png\" height=\"25\">"))
        @Html.Raw(@Html.ActionLink("[replacetext]", "Delete", new { id = item.Id }).ToHtmlString().Replace("[replacetext]", " <img src=\"/images/images/icons8-delete-document-48.png\" height=\"25\">"))

    </td>
</tr>
    }

</table>

