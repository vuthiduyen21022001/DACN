@model IEnumerable<WebsiteDuLich.Models.Nguoidung>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/ad_Layout.cshtml";
}

<p style="color:blue;text-align:left;font-size:32px">
    @Html.ActionLink("Thêm Mới", "Create")
    @Html.Raw(@Html.ActionLink("[replacetext]", "Create").ToHtmlString().Replace("[replacetext]", " <img src=\"/images/images/icons8-create-document-96.png\" height=\"45\">"))
</p>
<table class="table">
    <tr>
        <th style="border: 1px solid #A9A9A9 ; text-align:center">
            Tên Quyền
        </th>
        <th style="border: 1px solid #A9A9A9 ; text-align:center">
            Họ Tên
        </th>
        <th style="border: 1px solid #A9A9A9 ; text-align:center">
            Email
        </th>
        <th style="border: 1px solid #A9A9A9 ; text-align:center">
            Số Điện Thoại
        </th>
        <th style="border: 1px solid #A9A9A9 ; text-align:center">
            Địa Chỉ
        </th>
        <th style="border: 1px solid #A9A9A9; text-align: center">Action</th>

        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td style="border: 1px solid #A9A9A9; text-align: center">
        @Html.DisplayFor(modelItem => item.PhanQuyen.TenQuyen)
    </td>
    <td style="border: 1px solid #A9A9A9; text-align: center">
        @Html.DisplayFor(modelItem => item.Hoten)
    </td>
    <td style="border: 1px solid #A9A9A9; text-align: center">
        @Html.DisplayFor(modelItem => item.Email)
    </td>
    <td style="border: 1px solid #A9A9A9; text-align: center">
        @Html.DisplayFor(modelItem => item.Dienthoai)
    </td>
    <td style="border: 1px solid #A9A9A9; text-align: center">
        @Html.DisplayFor(modelItem => item.Diachi)
    </td>
    <td style="border: 1px solid #A9A9A9; text-align: center">
        @Html.Raw(@Html.ActionLink("[replacetext]", "Edit", new { id = item.MaNguoiDung }).ToHtmlString().Replace("[replacetext]", " <img src=\"/images/images/icons8-edit-property-48.png\" height=\"25\">"))
        @Html.Raw(@Html.ActionLink("[replacetext]", "Details", new { id = item.MaNguoiDung }).ToHtmlString().Replace("[replacetext]", " <img src=\"/images/images/icons8-view-details-48.png\" height=\"25\">"))
        @Html.Raw(@Html.ActionLink("[replacetext]", "Delete", new { id = item.MaNguoiDung }).ToHtmlString().Replace("[replacetext]", " <img src=\"/images/images/icons8-delete-document-48.png\" height=\"25\">"))
    </td>
</tr>
}

</table>
