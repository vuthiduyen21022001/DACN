@model WebsiteDuLich.Models.Nguoidung

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/ad_Layout.cshtml";
}

<h2>Sửa</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
