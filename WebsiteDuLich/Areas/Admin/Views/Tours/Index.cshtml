@*@model PagedList.IPagedList<WebsiteDuLich.Models.Tour>*@
@model IEnumerable<WebsiteDuLich.Models.Tour>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/ad_Layout.cshtml";
}
<div>
    <b style="font-size:14pt">Tìm kiếm:</b> @Html.TextBox("SearchString")
    <button> <img src="~/images/images/icons8-search-48.png" height="20" width="20" /> </button>
</div>
<p style="color:blue;text-align:left;font-size:32px">
    @Html.ActionLink("Thêm Mới", "Create")
    @Html.Raw(@Html.ActionLink("[replacetext]", "Create").ToHtmlString().Replace("[replacetext]", " <img src=\"/images/images/icons8-create-document-96.png\" height=\"45\">"))
</p>
<table class="table">
    <tr>
        <th style="border: 1px solid #A9A9A9;text-align:center">
            @Html.DisplayNameFor(model => model.DanhMuc.TenDM)
        </th>
        <th style="border: 1px solid #A9A9A9;text-align:center">
            @Html.DisplayNameFor(model => model.TenTour)
        </th>
        <th style="border: 1px solid #A9A9A9;text-align:center">
            @Html.DisplayNameFor(model => model.Giaban)
            <p>(vnđ)</p>
        </th>
        <th style="border: 1px solid #A9A9A9;text-align:center">
            @Html.DisplayNameFor(model => model.TinhTrang)
        </th>
        <th style="border: 1px solid #A9A9A9;text-align:center">
            @Html.DisplayNameFor(model => model.NgayDang)
        </th>
        <th style="border: 1px solid #A9A9A9;text-align:center">
            @Html.DisplayNameFor(model => model.LichTrinh)
        </th>
        <th style="border: 1px solid #A9A9A9;text-align:center">
            @Html.DisplayNameFor(model => model.HinhAnhTour)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td style="border: 1px solid #A9A9A9;text-align:center">
                @Html.DisplayFor(modelItem => item.DanhMuc.TenDM)
            </td>
            <td style="border: 1px solid #A9A9A9;text-align:center">
                @Html.DisplayFor(modelItem => item.TenTour)
            </td>
            <td class="donvi" style="border: 1px solid #A9A9A9;text-align:center">
                @Html.DisplayFor(modelItem => item.Giaban)
            </td>
            <td style="border: 1px solid #A9A9A9;text-align:center">
                @Html.DisplayFor(modelItem => item.TinhTrang)
            </td>
            <td style="border: 1px solid #A9A9A9;text-align:center">
                @item.NgayDang.ToString("dd/MM/yyyy")
            </td>
            <td style="border: 1px solid #A9A9A9;text-align:center">
                @Html.Raw(item.LichTrinh)
            </td>
            <td style="border: 1px solid #A9A9A9;text-align:center">
                <img src="@item.HinhAnhTour" style="height:45px" />
            </td>
            <td style="border: 1px solid #A9A9A9;text-align:center">
                @Html.Raw(@Html.ActionLink("[replacetext]", "Edit", new { id = item.Id }).ToHtmlString().Replace("[replacetext]", " <img src=\"/images/images/icons8-edit-property-48.png\" height=\"25\">"))
                @Html.Raw(@Html.ActionLink("[replacetext]", "Details", new { id = item.Id }).ToHtmlString().Replace("[replacetext]", " <img src=\"/images/images/icons8-view-details-48.png\" height=\"25\">"))
                @Html.Raw(@Html.ActionLink("[replacetext]", "Delete", new { id = item.Id }).ToHtmlString().Replace("[replacetext]", " <img src=\"/images/images/icons8-delete-document-48.png\" height=\"25\">"))
            </td>
        </tr>
    }

</table>
<script src="~/Scripts/donvitien.js"></script>