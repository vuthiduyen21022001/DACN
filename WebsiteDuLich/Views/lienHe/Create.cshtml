@model WebsiteDuLich.Models.LienHe

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container-fluid py-5">
    <div class="container py-5">
        <div class="text-center mb-3 pb-3">
            <h6 class="text-primary text-uppercase" style="letter-spacing: 5px;">LIÊN HỆ</h6>
            <h3>Liên hệ nếu có thắc mắc nào</h3>
        </div>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="row justify-content-center">
                <div class="col-lg-8">
                    <div class="contact-form bg-white" style="padding: 30px;">
                        <div id="success"></div>
                        <form name="sentMessage" id="contactForm" novalidate="novalidate">
                            <div class="form-row">
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                <div class="control-group col-sm-6 ">
                                    Họ Tên
                                    @Html.EditorFor(model => model.HoTenLH, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.HoTenLH, "", new { @class = "text-danger" })
                                </div>
                                <div class="control-group col-sm-6">
                                    Email
                                    @Html.EditorFor(model => model.EmailLH, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.EmailLH, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="control-group">
                                Chủ đề
                                @Html.EditorFor(model => model.ChuDeLH, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.ChuDeLH, "", new { @class = "text-danger" })
                            </div>
                            <div class="control-group" style="margin-top:30px">
                                Nội dung
                                @*@Html.TextAreaFor(model => model.NoiDungLH, new { htmlAttributes = new { @class = "form-control"} })*@
                                <textarea class="form-control py-3 px-4" id="NoiDungLH" name="NoiDungLH" rows="5">  
                            
                                </textarea>
                            </div>
                            <br />
                            <div class="text-center">
                                <input type="submit" value="Gửi" class="btn btn-primary py-2 px-4" />
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        }
        </div>
    <div>
        @Html.ActionLink("Trở lại", "Index")
    </div>
</div>
