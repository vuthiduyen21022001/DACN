@model IEnumerable<WebsiteDuLich.Models.TinTuc>
<head>
    <style>
        p.test2 {
            white-space: nowrap;
            width: 280px;
            overflow: hidden;
            text-overflow: ellipsis;
            font-size: 15px;
        }
    </style>
</head>
<div class="container-fluid py-5">
    <div class="container py-5">
        <div class="text-center mb-3 pb-3">
            <h6 class="text-primary text-uppercase" style="letter-spacing: 5px;">THÔNG TIN</h6>
            <h1>Thông tin tin tức du lịch</h1>
        </div>
        <div class="owl-carousel testimonial-carousel">
            @foreach (var item in Model)
            {
                <div class="text-center pb-4">
                    <img class="img-fluid mx-auto" src="@item.AnhTieuDe" style="width: 230px; height: 120px;">
                    <div class="testimonial-text bg-white p-4 mt-n5">
                        <a href="@Url.Action("Details", "tinTuc", new { id=item.Id })">
                            <p class=" test2 mt-5">
                                @item.MoTa
                            </p>
                        </a>

                        <a href="@Url.Action("Details", "tinTuc", new { id=item.Id })"><h5 class="text-truncate">@item.TieuDe</h5></a>
                        <span>Thời gian đăng: @item.TgDang.ToString("dd/MM/yyyy")</span>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
